# SAGE System Environment Variables
# Copia este archivo a .env y configura tus valores reales

# ==========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ==========================================

# URL completa de conexión a PostgreSQL
DATABASE_URL=postgresql://postgres:G121BNaAxp-9Th1@54.39.50.123:5432/sage

# Configuración individual de PostgreSQL
PGHOST=localhost
PGPORT=5432
PGDATABASE=sage
PGUSER=sage
PGPASSWORD=sage_password_2025

# ==========================================
# CONFIGURACIÓN DE APLICACIÓN
# ==========================================

# Entorno de ejecución (development, production, test)
NODE_ENV=development

# Puerto donde se ejecutará la aplicación
PORT=5000

# Dominio base para la aplicación
REPLIT_DOMAINS=tu-dominio.replit.app

# ==========================================
# APIS DE INTELIGENCIA ARTIFICIAL
# ==========================================

# OpenRouter API Key para YAML Studio
OPENROUTER_API_KEY=sk-or-v1-tu-clave-openrouter

# OpenAI API Key (alternativa)
OPENAI_API_KEY=sk-tu-clave-openai

# ==========================================
# SERVICIOS DE EMAIL
# ==========================================

# SendGrid para envío de emails
SENDGRID_API_KEY=SG.tu-clave-sendgrid

# Configuración SMTP alternativa
SMTP_HOST=mail.tudominio.com
SMTP_PORT=587
SMTP_USER=noreply@tudominio.com
SMTP_PASSWORD=tu-password-smtp
SMTP_SECURE=false
SMTP_TLS=true

# ==========================================
# ALMACENAMIENTO EN LA NUBE
# ==========================================

# Amazon AWS S3
AWS_ACCESS_KEY_ID=tu-access-key-aws
AWS_SECRET_ACCESS_KEY=tu-secret-key-aws
AWS_DEFAULT_REGION=us-east-1
AWS_S3_BUCKET=sage-backups

# Azure Blob Storage
AZURE_STORAGE_ACCOUNT_NAME=tu-cuenta-azure
AZURE_STORAGE_ACCOUNT_KEY=tu-clave-azure
AZURE_STORAGE_CONTAINER=sage-backups

# Google Cloud Storage
GOOGLE_CLOUD_PROJECT_ID=tu-proyecto-gcp
GOOGLE_CLOUD_BUCKET=sage-backups
GOOGLE_APPLICATION_CREDENTIALS=/path/to/gcp-credentials.json

# MinIO (S3-compatible)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=tu-access-key-minio
MINIO_SECRET_KEY=tu-secret-key-minio
MINIO_BUCKET=sage-backups
MINIO_SECURE=false

# ==========================================
# SEGURIDAD Y AUTENTICACIÓN
# ==========================================

# Clave secreta para JWT tokens
JWT_SECRET=tu-clave-jwt-super-secreta-256-bits

# Clave para cifrado de sesiones
SESSION_SECRET=tu-clave-sesion-super-secreta

# Clave maestra de cifrado
ENCRYPTION_KEY=tu-clave-cifrado-master-256-bits

# ==========================================
# CONFIGURACIÓN DE WEBHOOKS
# ==========================================

# Secreto para validación de webhooks
WEBHOOK_SECRET=tu-secreto-webhook

# URL base para webhooks
WEBHOOK_BASE_URL=https://tu-dominio.com/api/webhooks

# ==========================================
# CONFIGURACIÓN DE MONITOREO
# ==========================================

# Nivel de logs (error, warn, info, debug)
LOG_LEVEL=info

# Activar logs detallados de base de datos
DEBUG_SQL=false

# Activar logs de emails
DEBUG_EMAIL=false

# ==========================================
# CONFIGURACIÓN DE DESARROLLO
# ==========================================

# Activar modo desarrollo
DEBUG=true

# Activar recarga automática
WATCH_FILES=true

# Puerto para servidor de desarrollo
DEV_PORT=5000

# ==========================================
# CONFIGURACIÓN DE PRODUCCIÓN
# ==========================================

# Número de procesos worker
WEB_CONCURRENCY=2

# Timeout para requests
REQUEST_TIMEOUT=30

# Tamaño máximo de archivos (en MB)
MAX_FILE_SIZE=50

# ==========================================
# CONFIGURACIÓN ESPECÍFICA DE SAGE
# ==========================================

# Directorio para archivos temporales
TEMP_DIR=/tmp/sage

# Directorio para logs
LOG_DIR=/var/log/sage

# Directorio para backups locales
BACKUP_DIR=/var/backups/sage

# Intervalo de limpieza automática (en horas)
CLEANUP_INTERVAL=24

# Retención de archivos (en días)
FILE_RETENTION_DAYS=30

# ==========================================
# CONFIGURACIÓN DE CASILLAS DE EMAIL
# ==========================================

# Configuración de casillas se gestiona desde la interfaz web
# o directamente en la base de datos tabla: configuraciones_email

