CASILLA1_IMAP_PORT=993
CASILLA1_SMTP_HOST=mail.dreamhost.com
CASILLA1_SMTP_PORT=587
CASILLA1_USER=casilla1@tudominio.com
CASILLA1_PASSWORD=password-casilla1

# Ejemplo de configuración para casilla45
CASILLA45_IMAP_HOST=mail.dreamhost.com
