modules = ["python-3.11", "nodejs-20", "postgresql-16", "python3"]

[nix]
channel = "stable-24_05"
packages = ["arrow-cpp", "cacert", "glibcLocales", "libyaml", "openssl", "pkg-config", "unixODBC"]

[workflows]
runButton = "UI Dev Server"

[[workflows.workflow]]
name = "UI Dev Server"
author = 39710120
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "UI Dev Server"
mode = "parallel"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && npx next dev -p 5000 --hostname 0.0.0.0"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "cd /home/runner/workspace && npx next dev -p 5000 --hostname 0.0.0.0"]

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80
