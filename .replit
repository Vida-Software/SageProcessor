modules = ["python-3.11", "nodejs-20", "postgresql-16", "python3"]

[nix]
channel = "stable-24_05"
packages = ["cacert", "glibcLocales", "libyaml"]

[workflows]
runButton = "UI Dev Server"

[[workflows.workflow]]
name = "UI Dev Server"
author = 39710120
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "SAGE Daemon 2"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Janitor Daemon"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Janitor Manual Run"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Next.js Development Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Next.js Server"

[[workflows.workflow]]
name = "SAGE Daemon 2"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python run_sage_daemon2.py"

[[workflows.workflow]]
name = "Janitor Daemon"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/$REPL_SLUG && python janitor_daemon.py"

[[workflows.workflow]]
name = "Janitor Manual Run"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && python janitor_daemon.py"

[[workflows.workflow]]
name = "Next.js Development Server with Turbopack"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && npx next dev -p 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "Next.js Development Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && npx next dev -p 3001"
waitForPort = 3001

[[workflows.workflow]]
name = "Next.js Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd /home/runner/workspace && ps aux | grep node | grep -v grep | awk '{print $2}' | xargs kill -9 || true && npx next dev -p 5000 --hostname 0.0.0.0"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "npm run dev"]

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80
